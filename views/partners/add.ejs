<%- include("../partials/header.ejs") %>
    <h1 class="text-3xl text-black pb-6">Add Partners</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Add Partners
            </p>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action=<%=basePath + "/admin/partners" %> method="POST">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="name">Name</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text" name="name" placeholder="Enter the name of the partner" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="contact_person">Contact person</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="contact_person" type="text" name="contact_person" placeholder="Enter the name of the contact person" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="pic">Institute Image</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="file" id="pic" name="pic" placeholder="image url"></input>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="link">Website</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="link" type="text" name="website" placeholder="Website">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="place">Place</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="place" type="text" name="place" placeholder="place">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="isIndian">isIndian</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="isIndian" type="radio" name="isIndian" placeholder="isIndian">
                    </div>
                    <div class="mt-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Add</button>
                    </div>
                    <div class="mt-2">
                        <a class="hover:text-blue-500" href=<%=basePath + "/admin/partners" %>>Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>