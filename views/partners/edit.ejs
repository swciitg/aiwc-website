<%- include("../partials/header.ejs") %>

    <h1 class="text-3xl text-black pb-6">Edit Partner</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Edit Partner
            </p>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action=<%=basePath + "/admin/partners/" + partner.id + "?_method=PUT"%> method="POST">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="title">Name</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text" name="name" value="<%=partner.name %>" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="contact_person">Contact person</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="contact_person" type="text" name="contact_person" value="<%=partner.contact_person %>" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="link">Website</9label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="website" type="text" name="website" value="<%=partner.website %>">
                    </div>
                    <div class="mt-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Edit</button>
                    </div>
                    <div class="mt-2">
                        <a class="hover:text-blue-500" href=<%=basePath + "/admin/partners" %>>Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>