<%- include("../../partials/header.ejs") %>
<h1 class="text-3xl text-black pb-6">People of <%=partner.name %></h1>

<div class="mt-6">
  <a
    class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
    href="/aiwc/admin/partners/<%=partner.id%>/people/add"
    >Add People</a
  >
</div>

<div class="w-full mt-6 overflow-auto">
  <div class="bg-white">
    <table class="min-w-full leading-normal">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th
            class="
              px-5
              py-3
              border-b-2
              text-left text-sm
              font-semibold
              uppercase
              tracking-wider
            "
          >
            Name
          </th>
          <th
            class="
              px-5
              py-3
              border-b-2
              text-left text-sm
              font-semibold
              uppercase
              tracking-wider
            "
          >
            Qualification
          </th>

          <th
          class="
            px-5
            py-3
            border-b-2
            text-left text-sm
            font-semibold
            uppercase
            tracking-wider
          "
        >
          Designation
        </th>

        <th
        class="
          px-5
          py-3
          border-b-2
          text-left text-sm
          font-semibold
          uppercase
          tracking-wider
        "
      >
        Employer
      </th>

      <th
      class="
        px-5
        py-3
        border-b-2
        text-left text-sm
        font-semibold
        uppercase
        tracking-wider
      "
    >
      Personal Website
    </th>
    <th
    class="
      px-5
      py-3
      border-b-2
      text-left text-sm
      font-semibold
      uppercase
      tracking-wider
    "
  >
    Home Page
  </th>

  <th
  class="
    px-5
    py-3
    border-b-2
    text-left text-sm
    font-semibold
    uppercase
    tracking-wider
  "
>
  Email-id
</th>

          <th
            class="
              px-5
              py-3
              border-b-2
              text-left text-sm
              font-semibold
              uppercase
              tracking-wider
            "
          >
            Edit
          </th>
          <th
            class="
              px-5
              py-3
              border-b-2
              text-left text-sm
              font-semibold
              uppercase
              tracking-wider
            "
          >
            Delete
          </th>
        </tr>
      </thead>

      <tbody class="text-gray-700">
        <%people.forEach((people,i)=>{ if(i%2){%>
        <tr class="bg-gray-200">
          <%}else{%>
        </tr>

        <tr>
          <%}%>
          <td class="text-left py-3 px-4"><%= people.name %></td>
          <td class="text-left py-3 px-4">
            <%= people.qualification %><
          </td>
          <td class="text-left py-3 px-4">
            <%= people.designation %><
          </td>
          <td class="text-left py-3 px-4">
            <%= people.employer %><
          </td>
          <td class="text-left py-3 px-4">
            <%= people.personal_website %><
          </td>
          <td class="text-left py-3 px-4">
            <%= people.home_page %><
          </td>
          <td class="text-left py-3 px-4">
            <%= people.email %><
          </td>
          <td class="text-left py-3 px-4">
            <a
              class="hover:text-blue-500"
              href="/aiwc/admin/partners/<%=partner.id%>/people/<%=people.id%>"
              >Edit</a
            >
          </td>
          <td class="text-left py-3 px-4">
            <form
              class="mx-2"
              action="/aiwc/admin/partners/<%=partner.id%>/people/<%=people.id%>?_method=DELETE"
              method="POST"
            >
              <button class="hover:text-red-500">Delete</button>
            </form>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
  </div>
</div>

<%- include("../../partials/footer.ejs") %>
